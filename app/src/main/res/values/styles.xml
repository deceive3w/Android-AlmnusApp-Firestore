<resources>

    <!-- Base application theme. -->
    <style name="IntroTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryDark">#D32F2F</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#D32F2F</item>
        <item name="colorPrimaryDark">#F44336</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="IntroTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="IntroTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:windowActivityTransitions">true</item>
    </style>


</resources>
